<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_background_color">

    <!-- Header section with randomly generated icon -->
    <LinearLayout
        android:id="@+id/header_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Randomly generated header icon -->
        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/random_header_icon"
            android:contentDescription="@string/header_icon_desc"/>

        <!-- User profile text -->
        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuraci贸n"
            android:textSize="24sp"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

    <!-- Main configuration options -->
    <LinearLayout
        android:id="@+id/main_configuration_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuraci贸n de monitore" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuraciones de usuario" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificaci贸n de mensaje nuevo" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ayuda y comentarios" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sobre nosotros" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configuraci贸n de funciones" />
    </LinearLayout>

    <!-- Footer section -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/footer_home_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/home_icon_desc"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/footer_statistics_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/statistics_icon_desc"
            android:src="@drawable/monitorizacion" />

        <ImageView
            android:id="@+id/footer_settings_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/settings_icon_desc"
            android:src="@drawable/configuracion" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
