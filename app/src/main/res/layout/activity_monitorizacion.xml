<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7EFEB"
    tools:context=".MonitorizacionFragment">

    <!-- Header with logo and user icon -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Left icon (logo) -->
        <ImageView
            android:id="@+id/header_left_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/header_icon_desc"
            android:src="@mipmap/ic_launcher_foreground" />

        <!-- Right user icon -->
        <ImageView
            android:id="@+id/header_right_icon"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:contentDescription="@string/user_icon_desc"
            android:src="@drawable/usuario" />
    </LinearLayout>

    <!-- Liquid volume display -->
    <TextView
        android:id="@+id/liquid_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="1.23L"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/header" />

    <!-- Temperature and pet information cards -->

    <!-- Footer navigation icons -->
    <LinearLayout
        android:id="@+id/info_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/footer"
        app:layout_constraintTop_toBottomOf="@id/liquid_volume"
        tools:layout_editor_absoluteX="637dp">

        <!-- Temperature card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="#D7EFEB"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="temperatura:"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="normalment:"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[6, 13](°C)"
                android:textColor="@color/orange"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12°C"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Pet information card -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="145dp"
            android:layout_weight="1"
            android:background="#D7EFEB"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Pet name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coco"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Pet image -->
            <ImageView
                android:id="@+id/pet_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/pet_icon_desc"
                android:src="@drawable/coco" />

            <!-- Pet details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22/01/2023"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 año"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="un joven gato garfield"
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/footer_home_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/home_icon_desc"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/footer_statistics_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:contentDescription="@string/statistics_icon_desc"
            android:src="@drawable/monitorizacion" />

        <ImageView
            android:id="@+id/footer_settings_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/settings_icon_desc"
            android:src="@drawable/configuracion" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>